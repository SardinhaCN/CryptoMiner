  "container_name": "romm",
  "depends_on": ["romm-db"],
  "developer": "RomM Team",
  "website": "https://github.com/rommapp/romm",
  "icon": "https://raw.githubusercontent.com/rommapp/romm/main/public/android-chrome-512x512.png",
