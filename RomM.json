{
  "name": "RomM Server",
  "version": "1.0",
  "description": "Servidor de ROMs com interface web. Organize e jogue direto no navegador com metadados autom√°ticos.",
  "port_map": {
    "8993": "80"
  },
  "volumes": {
    "/DATA/roms": "/romm/library",
    "/DATA/romm/assets": "/romm/assets",
    "/DATA/romm/config": "/romm/config",
    "/DATA/romm/cache": "/romm/cache",
    "/DATA/romm/mysql": "/var/lib/mysql"
  },
  "env": {
    "DB_HOST": "romm-db",
    "DB_PORT": "3306",
    "DB_NAME": "rommdb",
    "DB_USER": "SardinhaCN",
    "DB_PASSWD": "00Fallen-Angel00",
    "ROMM_AUTH_SECRET_KEY": "aa05ba0c647c8300d4eb2210688248feefd69c72597f48d5d2160545f99fa5f9"
